@page "/"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@using Interfaz.ServiciosInterfaz
@inject LogicaSesion Sesion
@inject NavigationManager Navigation

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="row w-100 justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card card-login shadow-lg border-0">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Iniciar sesión</h2>
                    </div>

                    @if (loginFallido)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>Error:</strong> Usuario o contraseña incorrectos.
                        </div>
                    }

                    <EditForm Model="modeloSesion" OnSubmit="Login" FormName="loginForm">
                        <div class="form-group mb-4">
                            <label for="email" class="form-label fs-6">Email</label>
                            <InputText id="email" class="form-control form-control-lg input-login" @bind-Value="modeloSesion.Email" />
                        </div>

                        <div class="form-group mb-4">
                            <label for="contraseña" class="form-label fs-6">Contraseña</label>
                            <InputText id="contraseña" type="password" class="form-control form-control-lg input-login" @bind-Value="modeloSesion.Contraseña" />
                        </div>

                        <button type="submit" class="btn btn-dark w-100 btn-lg botonLogin">
                            Ingresar
                        </button>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f1ed;
    }

    .card-login {
        background-color: #dad2bc;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .botonLogin {
        background-color: #252323;
        color: #f5f1ed;
    }

    .botonLogin:hover {
        background-color: #a99985;
    }

    .input-login {
        background-color: #f5f1ed;
        border: 1px solid #70798c;
        color: #252323;
    }

    .input-login:focus {
        border-color: #a99985;
        box-shadow: 0 0 0 0.2rem rgba(169, 153, 133, 0.25);
    }
</style>

@code {
    private ModeloSesion modeloSesion = new ModeloSesion();
    private bool loginFallido;

    public class ModeloSesion
    {
        [EmailAddress] public string Email { get; set; } = string.Empty;
        public string Contraseña { get; set; } = string.Empty;
    }

    private async Task Login()
    {
        loginFallido = !await Sesion.Login(modeloSesion.Email, modeloSesion.Contraseña);

        if (!loginFallido)
        {
            StateHasChanged();
            Navigation.NavigateTo("/inicio");
        }
    }
}