                        {
                            <div class="form-check mb-2">
                                <InputCheckbox id="completada" class="form-check-input" @bind-Value="tareaEdicionEstado.EditoCompletada" />
                                <label for="completada" class="form-check-label">Marcar como 'Completada'</label>
                            </div>
