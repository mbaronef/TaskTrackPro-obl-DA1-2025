@page "/exito/proyecto/{id:int}/creado"
@using DTOs
@using Interfaz.ServiciosInterfaz
@using Controladores
@rendermode InteractiveServer
@inject LogicaSesion Sesion
@inject NavigationManager Navigator
@inject ControladorProyectos ControladorProyectos

@if (Sesion.UsuarioLogueado == null || !sesionCargada)
{
}
else
{
    <h3 class="text-center mt-4 text-success">
        <i class="bi bi-check-circle-fill me-2"></i>¡Proyecto creado con éxito!
    </h3>

    @if (proyecto != null)
    {
        <div class="container mt-4">
            <div class="card shadow-sm border-success">
                <div class="card-body">
                    <p>
                        Has creado el proyecto <strong>@proyecto.Nombre</strong> correctamente.
                    </p>
                    <p>
                        Ahora puedes administrarlo desde el menú lateral o acceder directamente a sus secciones
                        principales:
                    </p>
                    <ul class="mt-3 list-unstyled">
                        <li class="mb-2">
                            <a href="@($"/proyecto/{proyecto.Id}/tareas")"
                               class="btn btn-outline-success w-100 text-start">
                                <i class="bi bi-calendar"></i> Crear y gestionar tareas
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="@($"/proyecto/{proyecto.Id}/recursos_exclusivos")"
                               class="btn btn-outline-success w-100 text-start">
                                <i class="bi bi-tools"></i>️ Gestionar recursos exclusivos
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="@($"/proyecto/{proyecto.Id}/miembros")"
                               class="btn btn-outline-success w-100 text-start">
                                <i class="bi bi-people-fill"></i> Administrar miembros
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="@($"/proyecto/{proyecto.Id}/editar")"
                               class="btn btn-outline-success w-100 text-start">
                                <i class="bi bi-pencil"></i> Editar información del proyecto o eliminarlo
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
    else
    {
        <p class="text-danger text-center mt-5">No se pudo cargar la información del proyecto.</p>
    }
}

@code {
    [Parameter] public int id { get; set; }
    private ProyectoDTO proyecto;
    private bool sesionCargada = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !sesionCargada)
        {
            bool haySesionActiva = await Sesion.HaySesionActiva();

            if (!haySesionActiva)
            {
                Navigator.NavigateTo("/");
            }
            else
            {
                await Sesion.ActualizarSesion();
                proyecto = ControladorProyectos.ObtenerProyectoPorId(id);
                sesionCargada = true;
                StateHasChanged(); // Vuelve a renderizar para mostrar la sesión activa
            }
        }
    }

}